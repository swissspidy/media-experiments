{
	"name": "media-experiments",
	"version": "0.0.2",
	"private": true,
	"description": "WordPress media experiments",
	"author": "",
	"license": "GPL-2.0-or-later",
	"keywords": [
		"wordpress",
		"gutenberg",
		"media"
	],
	"homepage": "https://github.com/swissspidy/media-experiments",
	"repository": {
		"type": "git",
		"url": "https://github.com/swissspidy/media-experiments.git"
	},
	"bugs": {
		"url": "https://github.com/swissspidy/media-experiments/issues"
	},
	"engines": {
		"node": ">=20"
	},
	"workspaces": {
		"packages": [
			"packages/*"
		]
	},
	"dependencies": {
		"@mexp/edit-post": "*"
	},
	"devDependencies": {
		"@mexp/eslint-import-resolver": "*",
		"@playwright/test": "^1.44.1",
		"@shopify/web-worker": "^6.1.2",
		"@testing-library/jest-dom": "^6.4.5",
		"@testing-library/react": "^15.0.7",
		"@types/jest": "^29.5.12",
		"@types/mime": "^3.0.4",
		"@types/node": "^20.12.12",
		"@types/uuid": "^9.0.8",
		"@types/wordpress__blocks": "^12.5.14",
		"@wordpress/dependency-extraction-webpack-plugin": "^6.0.0",
		"@wordpress/env": "^10.0.0",
		"@wordpress/eslint-plugin": "^19.0.0",
		"@wordpress/scripts": "^28.0.0",
		"@wp-now/wp-now": "^0.1.72",
		"blob-polyfill": "^7.0.20220408",
		"eslint": "^8.57.0",
		"eslint-plugin-oxlint": "^0.4.0",
		"mini-css-extract-plugin": "^2.9.0",
		"monocart-reporter": "^2.4.7",
		"oxlint": "^0.4.2",
		"patch-package": "^8.0.0",
		"prettier": "npm:wp-prettier@3.0.3",
		"typescript": "^5.4.5",
		"uuid": "^9.0.1",
		"webpack": "^5.91.0",
		"webpack-cli": "^5.1.4",
		"webpack-virtual-modules": "^0.6.1"
	},
	"overrides": {
		"@wordpress/components": "^28.0.0",
		"playwright-core": "^1.44.0",
		"@playwright/test": "$@playwright/test"
	},
	"scripts": {
		"postinstall": "patch-package",
		"build": "wp-scripts build",
		"build:package-types": "tsc --build",
		"format": "wp-scripts format",
		"lint:css": "wp-scripts lint-style",
		"lint:js": "oxlint && wp-scripts lint-js",
		"lint:js:fix": "oxlint --fix && wp-scripts lint-js --fix",
		"lint:md:docs": "wp-scripts lint-md-docs",
		"lint:md:js": "wp-scripts lint-md-js",
		"lint:pkg-json": "wp-scripts lint-pkg-json",
		"start": "wp-scripts start",
		"test:e2e": "wp-scripts test-playwright --config tests/e2e/playwright.config.ts",
		"test:unit": "wp-scripts test-unit-js",
		"test:unit:help": "wp-scripts test-unit-js --help",
		"test:unit:watch": "wp-scripts test-unit-js --watch",
		"test:unit:debug": "wp-scripts --inspect-brk test-unit-js --runInBand --no-cache",
		"wp-env": "wp-env",
		"wp-now": "wp-now start --port=8889 --php=8.2 --wp=6.5 --blueprint=blueprints/wp-now.json"
	}
}
