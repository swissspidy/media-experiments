{
	"root": true,
	"extends": [
		"plugin:@wordpress/eslint-plugin/recommended",
		"plugin:@wordpress/eslint-plugin/i18n"
	],
	"plugins": [ "oxlint" ],
	"parserOptions": {
		"requireConfigFile": false,
		"babelOptions": {
			"presets": [ "@wordpress/babel-preset-default" ]
		},
		"warnOnUnsupportedTypeScriptVersion": false
	},
	"settings": {
		"import/resolver": "@mexp/eslint-import-resolver"
	},
	"globals": {
		"FFMPEG_CDN_URL": "readonly",
		"MEDIAPIPE_CDN_URL": "readonly",
		"PDFJS_CDN_URL": "readonly",
		"VIPS_CDN_URL": "readonly"
	},
	"rules": {
		"@wordpress/no-unused-vars-before-return": [
			"error",
			{
				"excludePattern": "^use"
			}
		],
		"@wordpress/i18n-no-flanking-whitespace": "error",
		"@wordpress/i18n-text-domain": [
			"error",
			{
				"allowedTextDomain": "media-experiments"
			}
		],
		"camelcase": [
			"error",
			{
				"allow": [
					"WP_REST_API_.*",
					"featured_media",
					"mexp_.*",
					"image_size",
					"site_icon",
					"site_logo",
					"generate_sub_sizes",
					"upload_request",
					"[a-z]+_outputFormat",
					"[a-z]+_quality",
					"[a-z]+_interlaced",
					"gif_convert",
					"media_details",
					"option_string"
				]
			}
		]
	},
	"overrides": [
		{
			"files": [ "tests/e2e/specs/**/*.ts" ],
			"extends": [ "plugin:@wordpress/eslint-plugin/test-playwright" ],
			"rules": {
				"playwright/no-skipped-test": "off"
			}
		},
		{
			"files": [ "tests/js/**/*.js" ],
			"extends": [ "plugin:@wordpress/eslint-plugin/test-unit" ]
		}
	]
}
